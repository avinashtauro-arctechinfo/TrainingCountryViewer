@page
@model CountryViewer.Pages.Continents.CreateModel
@{
}

<h1>Create Continent</h1>

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-3"><label asp-for="Continent"></label></div>
            <div class="col"><input type="text" asp-for="Continent.Name" class="form-control" /></div>
        </div>
        <div class="row">
            <div class="col">
                <button type="submit">Save</button>
                <button type="reset">Cancel</button>
            </div>
        </div>
    </div>
</form>